{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "outDir": "dist"
  },
  "include": ["src"]
}
